{
  "name": "module-starter",
  "version": "2.1.0",
  "description": "a cli tool to help you start a new node module",
  "main": "lib/index.js",
  "bin": "bin/module-starter",
  "scripts": {
    "lint": "run-p lint-*",
    "lint-src": "eslint src --fix",
    "lint-test": "eslint test --fix",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "babel": "babel src -d lib -s",
    "build": "rimraf lib && npm run babel",
    "prepublish": "npm run build",
    "test": "npm run lint"
  },
  "engines": {
    "node": ">=4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noamokman/module-starter.git"
  },
  "keywords": [
    "module",
    "starter"
  ],
  "author": {
    "name": "Noam Okman",
    "email": "noamokman@gmail.com",
    "url": "https://github.com/noamokman"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/noamokman/module-starter/issues"
  },
  "homepage": "https://github.com/noamokman/module-starter#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "cpr": "^2.0.2",
    "jsonfile": "latest",
    "lodash": "^4.17.4",
    "pify": "^2.3.0",
    "update-notifier": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "1.3.3",
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-noamokman": "^5.2.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "validate-commit-msg": "^2.12.1"
  }
}
